#:include resources/constants.kv

Root:
    ProjectSearchPage:


<Root@RelativeLayout>:
    canvas.before:
        Color:
            rgb: bg_bg_color

        Rectangle:
            pos: 0, 0
            size: self.size

<Page>:
    pos: bg_fg_offset, bg_fg_offset
    size_hint: None, None
    size: self.parent.size[0] - bg_fg_offset * 2, self.parent.size[1] - bg_fg_offset * 2

    canvas.before:
        Color:
            rgb: page_bg_color

        Rectangle:
            pos: 0, 0
            size: self.size


<ProjectSearchPage>:
    SearchBoxField:
        id: search_box_field

        size_hint_y: None
        height: "20sp"
        pos_hint: {"top": 1}

        canvas.after:
            Color:
                rgb: divider_color

            Line:
                points: 0, self.y, self.width, self.y
                width: 1
    ScrollView:
        size_hint_y: None
        height: root.height - sp(20)
        top: search_box_field.y

        do_scroll: False, True

        SameSizeListHolderLayout:
            id: project_holder

            child_size: 10
