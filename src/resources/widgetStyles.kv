<SearchBoxField>:
    canvas.before:
        Color:
            rgba: (1, 0, 1, 0.3) if self.mouse_over else (0, 0, 0, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Testing"
        color: (50/255, 50/255, 50/255) if root.mouse_over else (1, 1, 1)
        text_size: self.size